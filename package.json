{
  "name": "polideportivo-platform",
  "private": true,
  "scripts": {
    "build": "pnpm generate && turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "pnpm -w --filter @repo/db run db:generate",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint": "^9.6.1",
    "@types/eslint-scope": "^8.3.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "prettier": "^3.3.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "critters": "0.0.25",
    "date-fns-tz": "^1.3.8",
    "pg": "^8.11.3"
  },
  "pnpm": {
    "overrides": {
      "next": "15.4.7",
      "next-auth": "5.0.0-beta.29",
      "react": "19.1.1",
      "react-dom": "19.1.1",
      "@prisma/client": "6.15.0",
      "prisma": "6.15.0"
    }
  }
}
