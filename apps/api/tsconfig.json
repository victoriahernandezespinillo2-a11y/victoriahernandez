{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/app/*": ["./src/app/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Usar la resoluci√≥n por defecto de Next.js (Bundler) heredada del preset compartido
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
